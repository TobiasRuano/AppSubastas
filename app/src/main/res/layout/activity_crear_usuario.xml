<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/estilo_degradado_fondo"
    tools:context=".CrearUsuarioActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/montserrat_medium"
                android:shadowColor="#000055"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="20"
                android:text="Completar Datos ðŸ“‹"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Nombre:"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:layout_marginEnd="20dp"
                tools:layout_marginStart="20dp" />


                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/estilo_borde"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Nombre"
                    android:paddingHorizontal="15dp"
                    android:textColor="#000000"
                    android:textColorHint="#8e8e8e"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Apellido:"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:layout_marginEnd="20dp"
                tools:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/apellidoEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/estilo_borde"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Apellido"
                android:paddingHorizontal="15dp"
                android:textColor="#000000"
                android:textColorHint="#8e8e8e"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Mail:"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:layout_marginEnd="20dp"
                tools:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/mailEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/estilo_borde"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Mail"
                android:paddingHorizontal="15dp"
                android:textColor="#000000"
                android:textColorHint="#8e8e8e"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="DirecciÃ³n:"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:layout_marginEnd="20dp"
                tools:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/direccionEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/estilo_borde"
                android:fontFamily="@font/montserrat_regular"
                android:hint="DirecciÃ³n"
                android:paddingHorizontal="15dp"
                android:textColor="#000000"
                android:textColorHint="#8e8e8e"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="DNI:"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:layout_marginEnd="20dp"
                tools:layout_marginStart="20dp" />

            <EditText
                android:id="@+id/dniEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/estilo_borde"
                android:fontFamily="@font/montserrat_regular"
                android:hint="DNI"
                android:paddingHorizontal="15dp"
                android:textColor="#000000"
                android:textColorHint="#8e8e8e"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <Button
                android:id="@+id/createAccountButton"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/estilo_sombra"
                android:fontFamily="@font/montserrat_medium"
                android:text="Crear Cuenta"
                android:textStyle="bold"
                app:backgroundTint="#009fff" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>