<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titleTextView5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubastaActivity"
    android:background="@drawable/estilo_degradado_fondo"
    >


    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/nameDescriptionTextView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="20sp"
                android:text="Mis Participaciones"
                android:textColor="#ffffff"
                android:textSize="34sp"
                android:textStyle="bold"
                android:gravity="bottom|center"
                android:fontFamily="@font/montserrat_medium"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listRecyclerView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_below="@+id/linearLayout5"
            android:layout_marginBottom="55sp"
            />


    </RelativeLayout>

    <include layout="@layout/toolbarlogueado"></include>


</androidx.constraintlayout.widget.ConstraintLayout>